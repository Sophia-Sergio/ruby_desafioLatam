<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Tipo de Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if current_user.id != user.id %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin ? 'admin' : 'normal' %></td>
          <td><%= link_to 'Privilegios de administrador', edit_admin_path(user) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
