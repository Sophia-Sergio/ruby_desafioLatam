<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @project.desc %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<h1>Trabajadores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.lastname %></td>
        <td><%= worker.email %></td>
        <td><%= link_to 'Sacar del proyecto', worker_out_path(@project, worker.id), method: 'get' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>