<%= form_with(model: [@user, product], local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= form.label :title, "Nombre", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :name, id: :product_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :title, "Descripcion", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :description, id: :product_description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
        <%= form.label :title, "price", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= form.number_field :price, id: :product_price, class: "form-control" %>
        </div>
      </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  </fieldset>
<% end %>
