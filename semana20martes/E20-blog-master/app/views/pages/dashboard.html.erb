<% if notice.present? %>
  <div class="alert alert-warning">
      <p id="notice"><%= notice %></p>
  </div>
<% end %>

<h1>Usuarios</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>NÂº de comentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if user.admin? %>
          <td><%= link_to 'asignar como visita', role_change_path(user), class: 'btn btn-sm btn-warning' %></td>
        <% else %>
          <td><%= link_to 'asignar como admin', role_change_path(user), class: 'btn btn-sm btn-success' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

