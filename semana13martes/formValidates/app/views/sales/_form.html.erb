    <%= form.label :value %>
    <%= form.text_field :value, id: :sale_value %>
  </div>

  <div class="field form-group">
    <%= form.label :discount %>
    <%= form.text_field :discount, id: :sale_discount %>
  </div>
  <div class="field form-group">
    <%= form.label :tax %>
    <%= form.check_box :tax, id: :sale_tax %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>